<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/tv_jersey_picture"
        android:layout_width="176dp"
        android:layout_height="176dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/no_logo_image" />

    <TextView
        android:id="@+id/jersey_tv"
        android:layout_width="0dp"
        android:textSize="16sp"
        android:layout_height="wrap_content"
        android:text="@string/team_name"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/tv_jersey_picture"
        app:layout_constraintStart_toStartOf="@+id/tv_jersey_picture"
        app:layout_constraintTop_toBottomOf="@+id/tv_jersey_picture" />

</androidx.constraintlayout.widget.ConstraintLayout>